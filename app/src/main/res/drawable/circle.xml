<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="20dp">
    <item>
        <shape android:shape="oval">
            <solid
                android:color="@android:color/white"/>
            <size
                android:width="45dp"
                android:height="45dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="12dp"
                android:color="@color/circle"/>
        </shape>
    </item>

</layer-list>