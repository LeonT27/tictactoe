<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="10dp"
                    android:color="@color/circle"/>
                <size
                    android:width="52dp"
                    android:height="52dp"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="135"
            android:toDegrees="135">
            <shape android:shape="line">
                <stroke
                    android:width="10dp"
                    android:color="@color/circle"/>
                <size
                    android:width="52dp"
                    android:height="52dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>